@import "reset.css"
@import "mixins.styl"
.ellipsis
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

#app
  width 100%
  height 100%
  background-color #f5f5f5
  #content
    width 100%
    header
      position fixed
      top 0
      width 100%
      height 45px
      line-height 45px
      background-color: #02a774
      text-align: center
      z-index 20
      .header-title
        margin-top 10px
        color white
        font-size 22px
    section
      display none
      margin-top 45px
      button
        padding 12px 16px
        color white
        background-color #02a774
        border-radius 6px
        border  none
      &.on
       display block
      .swiper-container
          height 170px
          width 100%
          background-color #fff
         .swiper-wrapper
           width 100%
           height 100%
           .swiper-slide
             width 100%
             height 100%
             clearFix()
             li
               display flex
               flex-direction column
               align-items center
               float left
               width 25%
               img
                 width 50%
                 height 50%
                 margin 8px 0
               span
                 font-size 12px
         .swiper-pagination
            .swiper-pagination-bullet-active
              background #02a774
      &:first-child
        position: relative;
        margin-top 45px
        header
          .header-login
            position: absolute;
            right 5px
            color white!important
          .iconfont
            position absolute
            left 5px
            color white
            font-size 26px
        .waimai-main
          background-color #fff
          margin-top 12px
          color #999
          .waimai-list
            background-color: #fff;
            margin-bottom 50px
            a
              display block
              box-sizing border-box
              padding 15px 8px
              width 100%
              bottom-border-1px(#ccc)
              li
                position relative
                clearFix()
                img
                  float left
                  width 25%
                  height 75px
                  padding 6px
                  box-sizing border-box
                .list-sellerInfo
                  float left
                  font-size 12px
                  .sellerInfo-title
                    color black
                    font-size 16px
                    width 150px
                    &::before
                      content: '品牌';
                      display: inline-block;
                      font-size: 11px;
                      line-height: 11px;
                      color: #333;
                      background-color: #ffd930;
                      padding: 2px 2px;
                      border-radius: 2px;
                      margin-right: 5px;
                  .stars
                      margin 12px auto
                      .star
                        display inline-block
                        width 10px
                        height 10px

                        background-repeat no-repeat
                        background-size 10px 10px
                        &.on
                          bg_image('star24_on')
                        &.half
                          bg_image('star24_half')
                        &.off
                          bg_image('star24_off')
                      .grade
                        color #ff9a0d
                  .price
                    margin-top 10px
                .list-postInfo
                  height 75px
                  width 23%
                  float right
                  position relative
                  clearFix()
                  .baozhunpiao
                    float right
                    li
                      float left
                      margin-left 3px
                      border 1px solid #999
                      font-size 10px
                  .oneP
                    font-size 10px
                    background-color #02a774
                    color white
                    position absolute
                    left 0
                    top 50%
                    padding 1px
                  .twoP
                    font-size 10px
                    color #02a774
                    position absolute
                    right 0
                    top 50%
                    border 1px solid #02a774



      &:nth-child(2)
        .search
          background-color #fff
          height 50px
          line-height 50px
          .search-text
            height 30px
            width 75%
            background-color gainsboro
            margin-left 6px
            border-radius 2px
          button
            width 20%
            height 30px
            padding 5px
            border-radius 2px
            font-size 16px
            font-weight bold
      &:nth-child(3)
        width 100%
        .order-wrap
          width 60%
          margin 0 auto
          text-align: center
          color lightslategrey
          button
            margin-top 10px
      &:nth-child(4)
        width 100%
        margin-top 50px
        .login-wrap
          left 0
          right 0
          box-sizing border-box
          display block
          padding 20px 10px
          background-color #02a774
          .login
            color white
            clearFix()
            .login-left
              float left
              height 60px
              width 60px
              border-radius 50%
              overflow hidden
              vertical-align top
              .icon-person
                font-size 62px
                background-color #e4e4e4


            .userInfo
              float left
              margin-left 20px
              //padding 20px
              p
                font-size 18px
                font-weight 700
                margin-left 20px
              span
                font-weight normal
                vertical-align baseline
                .icon-mobile
                  display inline-block
                  font-size 32px
                  position relative
                  top 5px
            .arrow
              float right
        .info_data_list
          width 100%
          background-color #fff
          box-sizing border-box
          clearFix()
          .info_data_link
            width 33%
            float left
            display flex
            flex-direction column
            justify-content center
            align-items center
            border-right 1px solid #f1f1f1
            .info_data_top
              padding 15px 5px 10px
            .info_data_bottom
              padding-bottom 5px
            &:nth-child(1)
              .info_data_top
                span
                  font-size 22px
                  font-weight 700
                  color orange
            &:nth-child(2)
              .info_data_top
                span
                  font-size 22px
                  font-weight 700
                  color orangered
            &:nth-child(3)
              .info_data_top
                span
                  font-size 22px
                  font-weight 700
                  color green





        .profile_my_order
          background-color: #fff;
          width 100%
          .my_order
            margin-top 20px
            width 100%
            //当inline元素和div想处在同一行时，flex是最好的选择，加上flex两者就在同一行了
            display flex
            align-items center
            padding-left 10px
            height 50px
            bottom-border-1px(#ccc)
            span
              &:nth-child(1)
                .iconfont
                  font-size 32px
                  &.icon-order-s
                    color green
                  &.icon-jifen
                    color red
                  &.icon-vip
                    color orange
            .my_order_div
              color black
              width 82%
              display flex
              justify-content space-between
              .icon-jiantou1
                font-size 12px
                color grey
  footer
    display flex
    position fixed
    bottom 0
    width 100%
    height 50px
    z-index 20
    background-color: #fff;
    .guide-item
      display flex
      flex-direction column
      align-items center
      flex 1
      .iconfont
       font-size 20px
      top-border-1px(#ccc)
      span:first-child
        margin 8px 0
      span:last-child
         font-size 10px
      &.active
        color #5cb85c



  >.off
    display none
  >.on
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 200;

    .loginContainer
      width 100%
      height 100%
      background-color: #fff;
      .loginInner
        padding-top 60px
        width 80%
        margin 0 auto
        .login_header
          .login_logo
            font-size 40px
            font-weight bold
            color #02a774
            text-align center
          .login_header_title
            padding-top 40px
            text-align: center
            >a
              color #333
              font-size 14px
              padding-bottom 4px
              &:first-child
                margin-right 40px
              &.active
                color #02a774
                font-weight 700
                border-bottom 2px solid #02a774
        .login_content
          >form
            >div
              display none
              &.active
                display block
              input
                width 100%
                height 100%
                padding-left 10px
                box-sizing border-box
                border 1px solid #ddd
                border-radius 4px
                outline 0
                font 400 14px Arial
                &:focus
                  border 1px solid #02a774
              .login_message
                position relative
                margin-top 16px
                height 48px
                font-size 14px
                background #fff
                .get_verification
                  position absolute
                  top 50%
                  right 10px
                  transform translateY(-50%)
                  border 0
                  color #ccc
                  font-size 14px
                  background transparent
              .login_verification
                position relative
                margin-top 16px
                height 48px
                font-size 14px
                background #fff
                .switch_button
                  font-size 12px
                  border 1px solid #ddd
                  border-radius 8px
                  transition background-color .3s,border-color .3s
                  padding 0 6px
                  width 30px
                  height 16px
                  line-height 16px
                  color #fff
                  position absolute
                  top 50%
                  right 10px
                  transform translateY(-50%)
                  &.off
                    background #fff
                    .switch_text
                      float right
                      color #ddd
                  &.on
                    background #02a774
                  >.switch_circle
                    //transform translateX(27px)
                    position absolute
                    top -1px
                    left -1px
                    width 16px
                    height 16px
                    border 1px solid #ddd
                    border-radius 50%
                    background #fff
                    box-shadow 0 2px 4px 0 rgba(0,0,0,.1)
                    transition transform .3s
              .login_hint
                margin-top 12px
                color #999
                font-size 14px
                line-height 20px
                >a
                  color #02a774
            .login_submit
              display block
              width 100%
              height 42px
              margin-top 30px
              border-radius 4px
              background #4cd96f
              color #fff
              text-align center
              font-size 16px
              line-height 42px
              border 0
          .about_us
            display block
            font-size 12px
            margin-top 20px
            text-align center
            color #999
        .go_back
          position absolute
          top 5px
          left 5px
          width 30px
          height 30px
          >.iconfont
            font-size 20px
            color #999

